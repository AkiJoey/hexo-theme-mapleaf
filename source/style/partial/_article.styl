.article
  display: flex
  max-width: 800px
  height: 300px
  &:hover
    img
      transform: scale(1.1)
  
  &-cover
    flex-shrink: 0
    width: 55%
    overflow: hidden
    &-left
      border-radius: 0 10px 10px 0
    &-right
      border-radius: 10px 0 0 10px
    img
      width: 100%
      height: 100%
      object-fit: cover
      transition: all .6s
  
  &-info
    display: flex
    flex-direction: column
    justify-content: space-evenly
    padding: 20px 30px
    line-height: initial  // todo
    &-left
      order: -1
      text-align: left
    &-right
      text-align: right

    &-title
      color: #504e4e
      font-size: 20px
      font-weight: bold

    &-meta
      color: #888

    &-content
      font-size: 15px
      line-height: 1.5

    &-more
      color: #666
      font-size: 20px

.sticky
  color: red
  