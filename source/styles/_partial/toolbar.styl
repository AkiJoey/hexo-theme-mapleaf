#toolbar
  position: fixed
  right: 0
  bottom: 50px
  z-index: 100
  transition: all .5s

  &[hidden]
    display: block
    opacity: 0
    transform: translateX(30px)

  > button
    width: 30px
    height: 30px
    margin-bottom: 3px
    border-radius: 15px
    background-color: #49b1f5
    color: #fff
    font-size: 16px
    text-align: center
    transition: all .5s

    &:hover
      background-color: #da70da

    &[hidden]
      display: block
      opacity: 0
      transform: translateX(30px)

button
  display: block
  padding: 0
  outline: 0
  border: none
  cursor: pointer
