#pagination
  position: relative
  width: 100%
  overflow: hidden
  text-align: center
  .space
    color: $a-link-color
  .page-number
    display: inline-block
    margin: 0 0.2rem
    min-width: 1.2rem
    height: 1.2rem
    line-height: 1.2rem
    cursor: pointer
    &.current
      background: $light-blue
      color: $white
      cursor: default

#post
  #pagination
    display: flex
    height: 150px
    margin-top: 2rem
    background-color: #000
    a
      position: relative
      display: flex;
      flex-direction: column;
      justify-content: center;
      height 100%
      overflow: hidden
      &:hover img
        opacity: .8
        transform: scale(1.1)
    img
      position: absolute
      width: 100%
      height: 100%
      transition: all .6s
      opacity: .4
      object-fit: cover
    span
      z-index: 1
      &:nth-child(2)
        color: #eee
        font-size: 90%
      &:nth-child(3)
        color: #fff
        font-weight: 500
    &-prev
      flex-grow: 1
      text-align: left
      span
        margin-left: 50px
    &-next
      flex-grow: 1
      text-align: right
      span
        margin-right: 50px
