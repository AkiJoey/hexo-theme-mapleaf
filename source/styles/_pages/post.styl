#post
  width: 800px
  padding: 50px
  overflow: hidden

  img
    display:block
    max-width: 100%
    margin: 0 auto

  &-content
    margin-bottom: 1rem
    ol,
    ul
      margin-top: 0.4rem
      counter-reset: li
      p
        margin: 0
      ol,
      ul
        padding-left: 0.5rem
      li
        position: relative
        margin: 0.3rem 0
        padding-left: 0.3rem
  
  &-copyright
    position: relative
    margin-top: 2rem
    padding: 0.5rem 0.8rem
    border: 1px solid $light-grey
    border-radius: 10px
    box-shadow: 0 3px 8px 0 rgba(232, 237, 250, 0.6)
    transition: box-shadow 0.3s ease-in-out
    &:before
      position: absolute
      top: 0.5rem
      right: 0.5rem
      width: 0.8rem
      height: 0.8rem
      border-radius: 50%
      background: $light-blue
      content: ""
    &:after
      position: absolute
      top: 0.7rem
      right: 0.7rem
      width: 0.4rem
      height: 0.4rem
      border-radius: 50%
      background: $white
      content: ""
    &:hover
      box-shadow: 0 6px 10px 0 rgb(232, 237, 250, 0.8)
    span:first-child
      color: $light-blue
      font-size: 1.1em
      font-weight: 500
  
  &-share
    margin-top: 0.4rem
    &-tags
      display: inline-block
      a
        display: inline-block
        width: fit-content
        margin: 0.4rem 0.4rem 0.4rem 0
        padding: 0rem 0.6rem
        border: 1px solid $light-blue
        border-radius: 0.6rem
        background: $white
        color: $light-blue
        text-decoration: none
        font-size: 12px
        cursor: pointer
        transition: all 0.2s ease-in-out

        &:hover
          background: $light-blue
          color: $white
    &-social
      width: fit-content;
      display: inline-block;
      float: right;
      margin: 0.4rem 0
      .social-share
        font-size: 12px
      .social-share .social-share-icon
        width: 26px;
        height: 26px;
        font-size: 15px;
        line-height: 25px;
      .social-share a
        margin: 0 4px;


a.fancybox
  outline: none

  &:focus
    outline: none

  display: inline-block
  width: 100%
  text-align: center
  text-decoration: none



// 文章字體
#post-content p {
  font-size: 1.1em
}

#post-content ol, #post-content ul {
  font-size: 1em
}
